    <div id="recipe">
        <h1>Recipe Generator</h1>
        <button id="generate-btn">Generate Recipe</button>
        <pre id="recipe-output">Click the button to generate a recipe...</pre>
    </div>

    <script type="module">
      const button = document.getElementById('generate-btn');
      button.addEventListener('click', async () => {
        try {
          const res = await fetch('http://localhost:5000/generate-recipe');
          const data = await res.json();
          document.getElementById('recipe-output').textContent = data.recipe;
        } catch (err) {
          document.getElementById('recipe-output').textContent = 'Error generating recipe.';
          console.error(err);
        }
      });
    </script>

    <style>
      #recipe {
  max-width: 600px;
  margin: 4rem auto;
  padding: 2rem;
  background: #ffffff;
  border-radius: 1rem;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  font-family: 'Georgia', serif;
  text-align: center;
}

#recipe h1 {
  margin-bottom: 1.5rem;
  font-size: 2rem;
  color: #333;
}

#generate-btn {
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  border: none;
  border-radius: 0.5rem;
  background-color: #cd5088;
  color: white;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

#generate-btn:hover {
  background-color: #5b203b;
}

#recipe-output {
  margin-top: 2rem;
  background: #f4f4f4;
  padding: 1rem;
  border-radius: 0.5rem;
  white-space: pre-wrap;
  text-align: left;
  font-family: 'Courier New', monospace;
  line-height: 1.5;
  color: #444;
}

</style>